---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import SpringBoot from "./icons/SpringBoot.astro"
import SpringSecurity from "./icons/SpringSecurity.astro"
import Link from "./icons/Link.astro"
import JavaScript from "./icons/JavaScritp.astro"
import LinkButton from "./LinkButton.astro"
import Spring from "./icons/Spring.astro"
import MySQL from "./icons/MySQL.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#bdb777] text-white",
    icon: JavaScript,
  },
  SPRINGBOOT: {
    name: "Spring Boot",
    class: "bg-[#466f12] text-white",
    icon: SpringBoot,
  },
  SPRINSECURITY: {
    name: "Spring Security",
    class: "bg-[#466f12] text-white",
    icon: SpringSecurity,
  },
  MYSQL:{
    
    name: "MySQL",
    class: "bg-[#00171e] text-white",
    icon: MySQL,
  },
  

}
const PROJECTS = [
  {
    title: "Edatech - Desing & development",
    type: "Proyecto front-end",
    description:
      "Startup especializada en desarrollo web y diseño, creada para ofrecer soluciones digitales eficientes y visualmente atractivas.. Creado con js, CSS y Tailwind CSS.",
    link: "https://rignu1503.github.io/EdaTech/",
    github: "https://github.com/Rignu1503/EdaTech",
    image: "/projects/edatech.webp",
    tags: [TAGS.JS, TAGS.TAILWIND],
  },
  {
    title: "Local Storage",
    type: "Proyecto back-end",
    description:
      "Sistema backend para la gestión de inventarios y órdenes de compra, desarrollado con multiples herramientas de Spring con enfoque en eficiencia y escalabilidad.",
    link: null,
      documentation: "/localStorage",
    github: "https://github.com/Rignu1503/localStorageProyect",
    image: "/projects/localStorage.webp",
    tags: [ TAGS.MYSQL, TAGS.SPRINGBOOT, TAGS.SPRINSECURITY],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, type, description, tags, link,documentation, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <h5 class="text-l text-gray-800 dark:text-gray-100">
      {type}
    </h5>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {(link || null) && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
          {documentation && (
            <LinkButton href={documentation}>
              <Link class="size-4" />
              Documentación
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



